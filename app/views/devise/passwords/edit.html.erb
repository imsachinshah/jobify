<div class="container d-flex justify-content-center align-items-center min-vh-90">
  <div class="row border rounded-5 p-3 bg-white shadow box-area">

    <div class="header-text mb-3">
      <h2>Change your password</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="input mb-3">
        <%= f.label :password, "New password" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg bg-light fs-6", placeholder: "New Password" %>
      </div>
      <div>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <br>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg bg-light fs-6", placeholder: "Confirm New Password" %>
      </div>
      <br>

      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-lg btn-primary w-100 fs-6" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
